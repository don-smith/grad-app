var Browser = require('zombie')
Browser.localhost('example.com', '9966')

module.exports = [
  [/^I am on the home page$/, function (t, world) {
    world.browser = new Browser()
    world.browser.visit('/', t.end)
  }],
  [/^I should see "(.*)" as the page title$/, function (t, world, params) {
    world.browser.assert.element('h1')
    t.end()
  }]
]

