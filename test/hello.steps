var jsdom = require('jsdom')
module.exports = [
  [/^I am on the home page$/, function (t, world) {
    jsdom.env('http://localhost:9966', (err, window) => {
      t.error(err)
      world.window = window
      t.end()
    })
  }],
  [/^I should see "(.*)" as the page title$/, function (t, world, params) {
    const el = world.window.document.querySelector('h1')
    t.equal(el.textContent, params[1] )
    t.end()
  }]
]

