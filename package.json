{
  "name": "EDAGrads",
  "version": "1.0.0",
  "description": "it's a real sweet app",
  "main": "index.js",
  "scripts": {
    "start": "budo . -d --serve bundle.js --live",
    "build": "browserify . -o bundle.js -g uglifyify",
    "deps": "dependency-check . && dependency-check . --extra --no-dev",
    "test": "browserify test/integration/cuke.js | tape-run | tap-spec",
    "test:watch": "watchify test/integration/cuke.js -o '| tape-run' ",
    "test:debug": "budo test/integration/cuke.js -d --serve bundle.js --live ",
    "test:server": "NODE_ENV=test nodemon server.js --watch server.js",
    "dist": "mkdir -p dist && bash -c 'cp *.{js,html,css} dist'",
    "push": "gh-pages -d dist",
    "deploy": "npm run build && npm run dist && npm run push"
  },
  "browserify": {
    "transform": [
      [
        "evalify",
        {
          "files": [
            "**/service.js",
            "**/features.js"
          ]
        }
      ],
      [
        "babelify",
        {
          "presets": "es2015"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pietgeursen/"
  },
  "author": "pietgeursen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pietgeursen//issues"
  },
  "homepage": "https://github.com/pietgeursen/",
  "dependencies": {
    "bcrypt": "^0.8.7",
    "get-form-data": "^1.2.5",
    "http-routes": "^1.2.3",
    "knex": "^0.11.10",
    "pull-async": "^1.0.0",
    "sqlite3": "^3.1.4",
    "stack": "^0.1.0",
    "ticket-auth": "0.0.1",
    "vas": "^2.1.0",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.14.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "budo": "^8.2.0",
    "cuke-tap": "github:pietgeursen/cuke-tap",
    "dependency-check": "^2.6.0",
    "evalify": "^2.0.0",
    "gh-pages": "^0.11.0",
    "inu": "^3.1.3",
    "inux": "github:ahdinosaur/inux#navigate",
    "pg": "^6.1.0",
    "pull-dom-mutants": "^1.0.1",
    "pull-test": "^1.2.3",
    "tap-spec": "^4.1.1",
    "tape": "^4.5.1",
    "tape-run": "^2.1.4",
    "uglifyify": "^3.0.1",
    "watchify": "^3.7.0"
  }
}
